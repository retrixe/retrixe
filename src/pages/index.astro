<style lang='scss'>
  .list {
    padding-left: 2rem;
    > li {
      padding: 0.5rem 0;
    }
  }

  .segment {
    margin: 2rem 1rem;
  }

  .segment-with-image {
    margin: 2rem 1rem;
    display: flex;
    align-items: center;
    gap: 3rem;
    @media screen and (max-width: 600px) {
      align-items: baseline;
      flex-direction: column;
      &.invert-on-mobile {
        flex-direction: column-reverse;
      }
    }
  }

  picture {
    display: contents;
    source {
      display: none;
    }
  }

  .segment-image {
    min-width: 40%; /* Fix annoying layout shifts */
    width: 40%;
    border-radius: 8px;
    filter: drop-shadow(0 0 1rem var(--link-color));
    @media screen and (max-width: 600px) {
      width: 100%;
    }
  }

  .header {
    gap: 2rem;
    /* Shrink gap between header and the next segment */
    margin-bottom: 1rem;
    + .segment {
      margin-top: 0;
    }
    :global(h1) {
      line-height: 2.5rem; /* Fix annoying layout shifts */
    }
    @media screen and (max-width: 600px) {
      align-items: center;
      flex-direction: column-reverse;
    }

    img {
      border-radius: 50%;
      min-width: 100px; /* Fix annoying layout shifts */
      min-height: 100px;
      width: 100px;
      height: 100px;
      @media screen and (max-width: 600px) {
        width: 150px;
        height: 150px;
      }
    }
  }

  .footer {
    align-items: baseline;
    gap: 1rem;
    text-align: center;
  }

  .unstyled-link {
    color: var(--color);
    text-decoration: none;
    display: contents;
  }

  button {
    display: flex;
    align-items: center;
    gap: 4px;
    svg {
      height: 1.2em;
      width: 24px;
      fill: var(--color);
    }
  }

  .gutter-bottom {
    margin-bottom: 0.5rem;
  }

  @media (prefers-color-scheme: dark) {
    .github-image {
      filter: brightness(0) invert(1);
    }
  }
</style>
