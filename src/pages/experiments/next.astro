<style lang='scss'>
  .list {
    padding-left: 2rem;
    > li {
      padding: 0.5rem 0;
    }
  }

  .segment {
    margin: 2rem 1rem;
  }

  .segment-with-image {
    margin: 2rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    @media screen and (max-width: 600px) {
      align-items: baseline;
      flex-direction: column;
    }
  }

  .header {
    /* Shrink gap between header and the next segment */
    margin-bottom: 1rem;
    + .segment {
      margin-top: 0;
    }
    /* Fix annoying layout shifts */
    :global(h1) {
      line-height: 2.5rem;
    }
    @media screen and (max-width: 600px) {
      align-items: center;
      flex-direction: column-reverse;
    }

    img {
      border-radius: 50%;
      width: 100px;
      height: 100px;
      @media screen and (max-width: 600px) {
        width: 150px;
        height: 150px;
      }
    }
  }

  .footer {
    align-items: baseline;
    gap: 1rem;
    text-align: center;
  }

  .unstyled-link {
    color: var(--color);
    text-decoration: none;
  }

  button {
    display: flex;
    align-items: center;
    gap: 4px;
    svg {
      height: 1.2em;
      width: 24px;
      fill: var(--color);
    }
  }

  .gutter-bottom {
    margin-bottom: 0.5rem;
  }

  @media (prefers-color-scheme: dark) {
    .github-image {
      filter: brightness(0) invert(1);
    }
  }
</style>
